<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context="com.gin.wms.warehouse.operator.PutAway.PutawayTaskFinishActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="end|center_vertical"
                        android:text="Source Loc."
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />

                    <TextView
                        android:id="@+id/tvSource"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/colorSecondaryText"
                        android:textColorHint="@color/colorSecondaryText"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/font_subheading"
                        tools:text="BIN_1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="end|center_vertical"
                        android:text="Pallet No"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />

                    <TextView
                        android:id="@+id/tvPalletNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/colorSecondaryText"
                        android:textColorHint="@color/colorSecondaryText"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/font_subheading"
                        tools:text="XX0021" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="end|center_vertical"
                        android:text="Product"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />

                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/font_subheading"
                        tools:text="Buku Gambar" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="end|center_vertical"
                        android:text="Qty"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />

                    <TextView
                        android:id="@+id/tvQty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/colorSecondaryText"
                        android:textColorHint="@color/colorTextTitleLight"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/font_subheading"
                        tools:text="20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="end|center_vertical"
                        android:text="Expired Date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />

                    <TextView
                        android:id="@+id/tvExpiredDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/font_subheading"
                        tools:text="20 Feb 2018" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="16dp"
                        android:gravity="end|center_vertical"
                        android:text="Source Loc."
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />

                    <TextView
                        android:id="@+id/tvSource2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:textColorHint="@color/colorTextTitleLight"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/font_subheading"
                        android:textColor="@color/colorSecondaryText"
                        tools:text="BIN_1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="16dp"
                        android:gravity="end|center_vertical"
                        android:text="Pallet No"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />

                    <TextView
                        android:id="@+id/tvPalletNo2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:textColorHint="@color/colorTextTitleLight"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/font_subheading"
                        android:textColor="@color/colorSecondaryText"
                        tools:text="XX0021" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="16dp"
                        android:gravity="end|center_vertical"
                        android:text="Product"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />

                    <TextView
                        android:id="@+id/tvProductName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="@dimen/font_subheading"
                        android:textColor="@color/colorSecondaryText"
                        tools:text="Buku Gambar" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="16dp"
                        android:gravity="end|center_vertical"
                        android:text="Qty"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />

                    <TextView
                        android:id="@+id/tvQty2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:textColorHint="@color/colorSecondaryText"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/font_subheading"
                        android:textColor="@color/colorSecondaryText"
                        tools:text="20" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="16dp"
                        android:gravity="end|center_vertical"
                        android:text="Expired Date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />

                    <TextView
                        android:id="@+id/tvExpiredDate2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="@dimen/font_subheading"
                        android:textColor="@color/colorSecondaryText"
                        tools:text="20 Feb 2018" />


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="16dp"
                        android:gravity="end|center_vertical"
                        android:text="Dest. Location"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/font_subheading" />
                    <TextView
                        android:id="@+id/tvDestination"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textSize="@dimen/font_subheading"
                        android:textColor="@color/colorSecondaryText"
                        tools:text="dd" />

                    <EditText
                        android:id="@+id/edDestination"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:textColorHint="@color/colorSecondaryText"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/font_subheading"
                        android:textColor="@color/colorSecondaryText"
                        tools:text="BIN_1" />

                    <ImageButton
                        android:id="@+id/btnScanDestination"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="fitCenter"
                        android:background="@color/colorClickable"
                        android:src="@drawable/ic_qrcode_48_black"
                        android:tint="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btnReport"
        style="@style/CommonButton"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutButton"
        android:text="@string/btn_report"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="34dp"
        android:textColor="@android:color/white" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/layoutButton"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFinishAll"
            style="@style/CommonButton"
            android:layout_width="160dp"
            android:layout_height="54dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:text="selesai"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/btnFinish"
            style="@style/CommonButton"
            android:layout_width="160dp"
            android:layout_height="54dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toLeftOf="@+id/btnFinishAll"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/btnContinue"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
