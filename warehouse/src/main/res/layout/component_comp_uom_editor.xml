<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="49">

            <TextView
                android:id="@+id/tvPallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/comp_uom_pallet"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/tvSeparator4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                tools:text="/"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/tvCompUom1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="Bal100"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/tvSeparator5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                tools:text="/" />

            <TextView
                android:id="@+id/tvCompUom2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="Pck20"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/tvSeparator6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                tools:text="/"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/tvCompUom3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="Pcs"
                android:textColor="@color/colorPrimaryText"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="49">

            <EditText
                android:id="@+id/edPalletQty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:gravity="center"
                android:digits="0123456789"
                android:imeOptions="actionDone"
                android:maxLength="3"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/zero_value" />

            <TextView
                android:id="@+id/tvSeparator1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                tools:text="/"
                android:textColor="@color/colorPrimaryText" />

            <EditText
                android:id="@+id/edComp1Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:gravity="center"
                android:digits="0123456789"
                android:imeOptions="actionNext"
                android:maxLength="3"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:textColor="@color/colorSecondaryText"
                android:singleLine="true"
                android:text="@string/zero_value" />

            <TextView
                android:id="@+id/tvSeparator2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                tools:text="/"
                android:textColor="@color/colorPrimaryText"/>

            <EditText
                android:id="@+id/edComp2Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:gravity="center"
                android:digits="0123456789"
                android:imeOptions="actionNext"
                android:maxLength="3"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:textColor="@color/colorSecondaryText"
                android:singleLine="true"
                android:text="@string/zero_value" />

            <TextView
                android:id="@+id/tvSeparator3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                tools:text="/"
                android:textColor="@color/colorPrimaryText"/>

            <EditText
                android:id="@+id/edComp3Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="10"
                android:gravity="center"
                android:digits="0123456789"
                android:imeOptions="actionDone"
                android:maxLength="3"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:textColor="@color/colorSecondaryText"
                android:singleLine="true"
                android:text="@string/zero_value" />

        </LinearLayout>
    </LinearLayout>

</merge>